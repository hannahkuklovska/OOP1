{
     "version": "2.0.0",
     "tasks": [
         {
             "label": "clang build active file",
             "type": "shell",
             "command": "/usr/bin/clang++",   // Alebo cesta ku clang/g++
             "args": [
                 "-std=c++17",
                 "${file}",
                 "-o",
                 "${fileDirname}/${fileBasenameNoExtension}"
             ],
             "group": {
                 "kind": "build",
                 "isDefault": true
             },
             "problemMatcher": ["$gcc"],
             "detail": "Generated task for building the active file using Clang."
         }
     ]
 }
 